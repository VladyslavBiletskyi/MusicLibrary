@{
    ViewBag.Title = "Search";
    const string SearchMethodName = "SearchByStartPart";
}


<h2>Search</h2>
<div class="row">
    @foreach (var digit in new[] {"1","2","3","4","5","6","7","8","9","0","a", "b",
        "c", "d", "e", "f", "g", "h", "i", "j", "k", "l", "m", "n", "o", "p","q",
        "r", "s", "t", "u", "v", "w", "x", "y", "z","а","б","в","г","д","е","ё",
        "ж","з","и","й","к","л","м","н","о","п","р","с","т","у","ф","х","ц","ч",
        "ш","щ","ъ","ы","ь","э","ю","я"})
    {
        <div class="col-md-1">
            @Html.ActionLink(digit, SearchMethodName, new RouteValueDictionary { { "searchPart", digit } })
        </div>
    }
</div>

<div class="row">
    @using (Html.BeginForm(SearchMethodName, "Performers"))
    {
        <label>Search by name</label>
        <input type="text" name="searchPart"/>
        <input type="submit" value="search" class="btn btn-default btn-lg"/>
    }
</div>
<div class="row">
    @Html.ActionLink("Create", "Create", null, new Dictionary<string, object> { { "class", "btn btn-primary btn-lg" } })
</div>