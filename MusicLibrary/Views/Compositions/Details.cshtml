@model Domain.Entities.Composition

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Composition</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Text)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Text)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
        
        <dt>
            @Html.DisplayNameFor(model => model.Albums)
        </dt>

        <dd>
            @if (Model.Albums != null && Model.Albums.Any())
            {
                foreach (var album in Model.Albums)
                {
                    @Html.ActionLink(album.Name, "Details", "Albums", new { id = album.Id }, null)
                }
            }
        </dd>
        
        <dt>
            @Html.DisplayNameFor(model => model.Genre)
        </dt>

        <dd>
            @Html.ActionLink(Model.Genre.Name, "Details", "Genres", new { id = Model.Genre.Id }, null)
        </dd>
    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }, new { @class = "btn btn-primary btn-lg" })
    @Html.ActionLink("Delete", "Delete", new { id = Model.Id }, new { @class = "btn btn-danger btn-lg" })
    @Html.ActionLink("Back to List", "Search", null, new { @class = "btn btn-primary btn-lg" })
</p>
